    // Header Area Start
    include includes/header.pug
    // Header Area End
    // Mobile Menu Start
    include includes/mobile-menu.pug
    // Mobile Menu End
    // Breadcrumbs Area Start
    include includes/breadcrumbs.pug
    // Breadcrumbs Area Start
    // My Account Area Start
    .my-account-area.section-padding
      .container
        .section-title2
          h2 Account Profile
        .row
          #collapseOne.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='headingOne')
            .panel-body
              .coupon-info
                h1.heading-title Your personal preferences
                // MultiStep Form
                form(action='/like', method='post')
                  .form_wrapper
                    fieldset.msf_hide
                      h2 Recommendation 1
                      .single-banner
                        .product-wrapper
                          img(alt='', src=recom[0].image_url)
                        .banner-bottom.text-center
                          p #{recom[0].title}
                          p
                            | #{recom[0].description}
                      input(type='radio', name='choice0', value=recom[0].id + ' like', checked='')
                      | Like
                      br
                      input(type='radio', name='choice0', value=recom[0].id + ' dislike')
                      |  Dislike
                      br
                      input(type='button', name='back', value='Back', onclick='msf_btn_back()')
                      input(type='button', name='next', value='Next', onclick='msf_btn_next()')
                      .msf_bullet_o
                      .msf_line
                    fieldset.msf_hide
                      h2 Recommendation 2                    
